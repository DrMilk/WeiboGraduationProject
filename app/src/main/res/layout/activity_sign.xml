<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/mp_blue">
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快速注册"
            android:layout_gravity="center"
            android:theme="@style/title_font"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:id="@+id/header_headimg_bg"
                    android:layout_width="73dp"
                    android:layout_height="73dp"
                    android:layout_gravity="center"
                    android:background="@drawable/tab_main_head">
                    <ImageView
                        android:id="@+id/header_headimg"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@mipmap/ohi"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
                <TextView
                    android:theme="@style/style_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:theme="@style/style_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帐号:"/>
                <EditText
                    android:id="@+id/sign_phonenum"
                    android:lines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="手机号"
                    android:inputType="number"
                    android:textColorHint="@color/mp_gray1"
                    android:theme="@style/style_about"
                    android:textStyle="italic"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:theme="@style/style_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码:"/>
                <EditText
                    android:id="@+id/sign_password"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="必填"
                    android:textColorHint="@color/mp_gray1"
                    android:theme="@style/style_about"
                    android:textStyle="italic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:theme="@style/style_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码重复:"/>
                <EditText
                    android:id="@+id/sign_password_again"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="必填"
                    android:textColorHint="@color/mp_gray1"
                    android:theme="@style/style_about"
                    android:textStyle="italic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:theme="@style/style_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别:"/>
                <Spinner
                    android:id="@+id/sign_sex"
                    android:paddingLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/sex"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:theme="@style/style_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称:"/>
                <EditText
                    android:id="@+id/sign_name"
                    android:lines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="必填"
                    android:textColorHint="@color/mp_gray1"
                    android:theme="@style/style_about"
                    android:textStyle="italic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:theme="@style/style_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签名:"/>
                <EditText
                    android:id="@+id/sign_sign"
                    android:lines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/mp_gray1"
                    android:theme="@style/style_about"
                    android:textStyle="italic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:inputType="textEmailAddress"
                    android:theme="@style/style_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮箱:"/>
                <EditText
                    android:id="@+id/sign_emial"
                    android:lines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="必填"
                    android:textColorHint="@color/mp_gray1"
                    android:theme="@style/style_about"
                    android:textStyle="italic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:theme="@style/style_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址:"/>
                <EditText
                    android:id="@+id/sign_address"
                    android:lines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/mp_gray1"
                    android:theme="@style/style_about"
                    android:textStyle="italic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:theme="@style/style_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ:"/>
                <EditText
                    android:id="@+id/sign_qq"
                    android:lines="1"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/mp_gray1"
                    android:theme="@style/style_about"
                    android:textStyle="italic"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:theme="@style/style_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信:"/>
                <EditText
                    android:id="@+id/sign_wechat"
                    android:lines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/mp_gray1"
                    android:theme="@style/style_about"
                    android:textStyle="italic"/>
            </LinearLayout>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:background="@drawable/button_bg"
                android:id="@+id/button_ok"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textColor="@color/white_smoke"
                android:text="  提交  "/>
            <Button
                android:layout_marginLeft="28dp"
                android:id="@+id/button_back"
                android:background="@drawable/button_bg"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textColor="@color/white_smoke"
                android:text="  返回  "/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
