<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="6dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        >
        <RelativeLayout
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:id="@+id/header_headimg_bg"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:gravity="center"
            android:background="@drawable/tab_main_head">
            <ImageView
                android:id="@+id/header_headimg"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/ohi"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="26dp">
                <TextView
                    android:theme="@style/style_about"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:id="@+id/listitem2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="13251501326"/>
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/listitem2_time"
                        android:textStyle="italic"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/context_text"
                        android:textSize="12sp"
                        android:text="2017-5-4 09:38"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:theme="@style/style_about_fu"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:id="@+id/listitem2_context"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="景点介绍 绝大多数第一次来背景的旅游..."/>
                <TextView
                    android:id="@+id/listitem2_count"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@mipmap/ic_alert_red"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:text="4"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"
        />

</LinearLayout>
