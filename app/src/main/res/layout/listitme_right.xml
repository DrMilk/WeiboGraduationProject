<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/abc_list_selector_disabled_holo_light"
                android:layout_marginTop="8dp"
                android:id="@+id/char_text_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="2016年3月28日 18:32"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/char_text_content"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@drawable/bg_msgbox_send_press"
                android:text="播放 小苹果"/>
            <RelativeLayout
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:id="@+id/header_headimg_bg"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:background="@drawable/tab_main_head">
                <ImageView
                    android:id="@+id/header_headimg"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/ohi"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>