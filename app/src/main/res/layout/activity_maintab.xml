<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@mipmap/bg_103">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|snap">
            <ImageView
                android:alpha="0.9"
                android:id="@+id/maintab_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg_200"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp">
                <ImageView
                    android:id="@+id/maintab_backbutton"
                    android:src="@mipmap/userinfo_buttonicon_back"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/maintab_morebutton"
                    android:background="@drawable/tab_main_more"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginBottom="40dp">
                <RelativeLayout
                    android:layout_width="73dp"
                    android:layout_height="73dp"
                    android:layout_gravity="center"
                    android:background="@drawable/tab_main_head">
                    <ImageView
                        android:id="@+id/maintab_imghead"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@mipmap/ohi"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:id="@+id/maintab_name"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="牛奶博士aa"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:theme="@style/textshadowColor"
                        />
                    <ImageView
                        android:id="@+id/maintab_sex"
                        android:layout_toRightOf="@id/maintab_name"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/userinfo_icon_male"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:id="@+id/relation_shu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="|"
                        android:textSize="12sp"
                        android:textColor="@color/white" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/relation_shu">
                        <TextView
                            android:layout_marginRight="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注"
                            android:textSize="12sp"
                            android:textColor="@color/white_smoke"
                            android:theme="@style/textshadowColor"/>
                        <TextView
                            android:id="@+id/maintab_mblog"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textSize="12sp"
                            android:textColor="@color/white_smoke"
                            android:theme="@style/textshadowColor"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/relation_shu">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="粉丝"
                            android:textSize="12sp"
                            android:textColor="@color/white_smoke"
                            android:theme="@style/textshadowColor"/>
                        <TextView
                            android:id="@+id/maintab_funs"
                            android:layout_marginLeft="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1672"
                            android:textSize="12sp"
                            android:textColor="@color/white_smoke"
                            android:theme="@style/textshadowColor"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/maintab_descripition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="简介:不喝牛奶不睡觉"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:theme="@style/textshadowColor"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
        <LinearLayout
            android:id="@+id/activity_linear_tab"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="vertical"
            android:gravity="center_horizontal|bottom"
            android:background="@mipmap/bg_top"
            app:layout_behavior="@string/scale_up_show_behavior_linear"
            app:layout_scrollFlags="enterAlways">
            <android.support.design.widget.TabLayout
                android:id="@+id/maintab_tabs"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@color/red"
                app:tabSelectedTextColor="@color/red"
                app:tabTextColor="@color/black"
                />
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/maintab_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_for_alert_pressed"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:alpha="0.7"/>
    <LinearLayout
        android:id="@+id/activity_maintab_linear_remark"
        android:background="@color/gold_yellow"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="right">
        <EditText
            android:id="@+id/tab_remark_write"
            android:layout_marginLeft="54dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:theme="@style/style_about"/>
        <ImageView
            android:id="@+id/tab_remark_send"
            android:layout_gravity="right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/upload_icon"
            />
    </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>